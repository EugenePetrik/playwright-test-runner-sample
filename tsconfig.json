{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],    
    "moduleResolution": "node",
    "noImplicitAny": true,
  },
  "include": ["src/**/*.ts", "playwright.config.ts"],
}
