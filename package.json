{
  "name": "playwright-ts-playwright-test-runner",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "codegen": "npx playwright codegen",
    "lint": "eslint . --ext .ts",
    "pretest": "npm run remove-logs",
    "test": "npx playwright test --reporter=line,allure-playwright --project=chromium",
    "test:debug": "set PWDEBUG=1 && npm run test --reporter=line",
    "test:console": "set PWDEBUG=console && npm run test --reporter=line",
    "test:logs": "set DEBUG=pw:api && npm run test --reporter=line",
    "test:mobile": "npm run test --project=\"iPhone 11\" --reporter=dot,line",
    "remove-logs": "ts-node ./src/utils/logs.cleaner.ts",
    "start:project": "npm init playwright fancy-new-project",
    "report": "allure generate ./allure-results --clean && allure open",
    "report-ci": "allure generate allure-results --clean -o allure-report"
  },
  "keywords": [
    "Playwright",
    "TypeScript",
    "Playwright/test",
    "Allure"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.15.1",
    "@types/faker": "^5.5.8",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.10.2",
    "@types/tough-cookie": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "allure-commandline": "^2.13.8",
    "allure-playwright": "^2.0.0-beta.13",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "envalid": "^7.2.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-playwright": "^0.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "faker": "^5.5.3",
    "fs-extra": "^10.0.0",
    "got": "^11.8.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "playwright": "^1.15.1",
    "prettier": "^2.4.1",
    "tough-cookie": "^4.0.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "winston": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint . --ext .ts --debug"
    ]
  }
}
